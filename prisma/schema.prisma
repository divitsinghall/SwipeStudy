// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================================================
// ENUMS
// =============================================================================

enum ResourceType {
  VIDEO
  REPO
}

enum SwipeAction {
  LEFT
  RIGHT
  SAVE
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum ItemStatus {
  TODO
  IN_PROGRESS
  DONE
}

// =============================================================================
// MODELS
// =============================================================================

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  preferences Json     @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Phase 2: Onboarding fields
  onboardingCompleted Boolean    @default(false)
  goals               String[]
  level               Difficulty @default(BEGINNER)
  weeklyHours         Int        @default(5)

  swipes    Swipe[]
  playlists Playlist[]

  @@index([email])
}

model Resource {
  id           String       @id @default(cuid())
  title        String
  type         ResourceType
  url          String
  thumbnailUrl String?
  duration     String?      // e.g., "12:34" for videos, null for repos
  metadata     Json         @default("{}") // stars, description, etc.
  qualityScore Float        @default(0.0)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  // Phase 2: Extended fields
  tags            String[]
  difficulty      Difficulty @default(BEGINNER)
  durationMinutes Int        @default(0)

  swipes        Swipe[]
  playlistItems PlaylistItem[]

  @@index([type])
  @@index([qualityScore])
  @@index([createdAt])
  @@index([difficulty])
}

model Swipe {
  id         String      @id @default(cuid())
  userId     String
  resourceId String
  action     SwipeAction
  createdAt  DateTime    @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  resource Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)

  @@unique([userId, resourceId]) // User can only swipe a resource once
  @@index([userId])
  @@index([resourceId])
  @@index([action])
  @@index([createdAt])
}

// =============================================================================
// PHASE 2: PLAYLIST MODELS
// =============================================================================

model Playlist {
  id        String   @id @default(cuid())
  userId    String
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  items PlaylistItem[]

  @@index([userId])
}

model PlaylistItem {
  id         String     @id @default(cuid())
  playlistId String
  resourceId String
  order      Int
  status     ItemStatus @default(TODO)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  playlist Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  resource Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)

  @@unique([playlistId, resourceId])
  @@index([playlistId])
  @@index([status])
}

